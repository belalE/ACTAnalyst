<% layout('layouts/homeplate') %>
<!-- Show all previous attempts(data page) w/ graphs + analysis -->
<div>
  <h1 id="attempts_header" class="display-1 text-center fw-bold text-white">
    Data
  </h1>
</div>
<div class="container mt-5">

<a class="btn btn-success btn-sm mb-3" href="/attempts/new">New Attempt</a>
<% if (sortedAttempts.length != 0) { %>
<div class="text-center mb-3">
  <h2 class="display-2 bg-primary p-3 rounded-pill text-light mb-3">Scores</h2>
  <!-- https://codeburst.io/javascript-arrays-finding-the-minimum-maximum-sum-average-values-f02f1b0ce332 -->
    <div class="row p-3 bg-white rounded-3 text-white mb-3">
      <table class="table">
      <thead>
        <tr>
          <th scope="col"></th>
          <th scope="col">English</th>
          <th scope="col">Math</th>
          <th scope="col">Reading</th>
          <th scope="col">Science</th>
        </tr>
      </thead>
      <tbody>
    
        <tr>
          <th scope="row">Average Score</th>
          <td><%= trendData.englishArr.reduce((a,b) => a + b, 0) /
          trendData.englishArr.length %></td>
          <td><%= trendData.mathArr.reduce((a,b) => a + b, 0) / trendData.mathArr.length
          %></td>
          <td><%= trendData.readingArr.reduce((a,b) => a + b, 0) /
          trendData.readingArr.length %></td>
          <td><%= trendData.scienceArr.reduce((a,b) => a + b, 0) /
          trendData.scienceArr.length %></td>
        </tr>
        <tr>
          <th scope="row">Score Range</th>
          <td><%= Math.min(...trendData.englishArr) %> - <%=
          Math.max(...trendData.englishArr) %></td>
          <td><%= Math.min(...trendData.mathArr) %> - <%=
          Math.max(...trendData.mathArr) %></td>
          <td><%= Math.min(...trendData.readingArr) %> - <%=
          Math.max(...trendData.readingArr) %></td>
          <td><%= Math.min(...trendData.scienceArr) %> - <%=
          Math.max(...trendData.scienceArr) %></td>
        </tr>
        <tr>
          <th scope="row">Average # of Mistakes</th>
          <td><%= mistakeData.englishArr.reduce((a,b) => a + b, 0) /
          mistakeData.englishArr.length %></td>
          <td><%= mistakeData.mathArr.reduce((a,b) => a + b, 0) /
          mistakeData.mathArr.length %></td>
          <td><%= mistakeData.readingArr.reduce((a,b) => a + b, 0) /
          mistakeData.readingArr.length %></td>
          <td><%= mistakeData.scienceArr.reduce((a,b) => a + b, 0) /
          mistakeData.scienceArr.length %></td>
        </tr>
        <tr>
          <th scope="row">Mistakes Range</th>
          <td><%= Math.min(...mistakeData.englishArr) %> - <%=
          Math.max(...mistakeData.englishArr) %></td>
          <td><%= Math.min(...mistakeData.mathArr) %> - <%=
          Math.max(...mistakeData.mathArr) %></td>
          <td><%= Math.min(...mistakeData.readingArr) %> - <%=
          Math.max(...mistakeData.readingArr) %></td>
          <td><%= Math.min(...mistakeData.scienceArr) %> - <%=
          Math.max(...mistakeData.scienceArr) %></td>
        </tr>
      </tbody>
      </table>
    </div>
<div class="row p-3 bg-white rounded-3 text-white mb-3">
  <div id="scoreChart"></div>
</div>

<div class="row my-3">
  <div class="col">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Previous Attempts</h5>
        <p class="card-text text-muted">Most recent practice tests</p>
      </div>
      <ul class="list-group list-group-flush">
        <% for (attempt of sortedAttempts.slice(0,5)) { %>
        <li class="list-group-item">
          <a href="/attempts/<%= attempt._id %>"
            ><%= attempt.test.form %> - <%=
            attempt.dateTaken.toISOString().slice(0, 10) %>
          </a>
        </li>
        <% } %>
      </ul>
      <div class="card-body">
        <a href="#allAttempts" class="card-link text-dark">Show more...</a>
      </div>
    </div>
  </div>
  <div class="col">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Worst Topic</h5>
        <p class="card-text text-muted">
          The topic within each section with the most mistakes
        </p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <b>English:</b> <%= worstDict.english %>
        </li>
        <li class="list-group-item"><b>Math:</b> <%= worstDict.math %></li>
        <li class="list-group-item">
          <b>Reading:</b> <%= worstDict.reading %>
        </li>
        <li class="list-group-item">
          <b>Science:</b> <%= worstDict.science %>
        </li>
      </ul>
    </div>
  </div>
</div>
<div class="row p-3 bg-white rounded-3 text-white mb-3">

<div id="rawChart"></div>
</div>

<div class="row p-3 bg-white rounded-3 text-white mb-3">

<%- include('../partials/tabview') %>
<div id="English" class="tabcontent">
  <div id="qTypeBarEng" class="mt-3"></div>
  <div id="tagGraphEng" class="mt-3"></div>
</div>
<div id="Math" class="tabcontent">
  <div id="qTypeBarMath" class="mt-3"></div>
  <div id="tagGraphMath" class="mt-3"></div>
</div>
<div id="Reading" class="tabcontent">
  <div id="qTypeBarRead" class="mt-3"></div>
  <div id="tagGraphRead" class="mt-3"></div>
</div>
<div id="Science" class="tabcontent">
  <div id="qTypeBarSci" class="mt-3"></div>
  <div id="tagGraphSci" class="mt-3"></div>
</div>
</div>
<div class="row p-3 bg-white rounded-3 pb-4">

<div id="allAttempts mt-3">
  <h3 class="text-center mt-3">All Attempts</h3>
  <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Attempt</th>
      <th scope="col">Date</th>
      <th scope="col">English</th>
      <th scope="col">Math</th>
      <th scope="col">Reading</th>
      <th scope="col">Science</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i=0;i<sortedAttempts.length;i++) { %>
      <tr>
        <th scope="row"><%= i + 1 %></th>
        <td><a href="/attempts/<%= sortedAttempts[i]._id %>"><%= sortedAttempts[i].test.form %> </a></td>
        <td><%= sortedAttempts[i].dateTaken.toISOString().slice(0, 10) %></td>
        <td><%= trendData.englishArr.slice().reverse()[i] %></td>
        <td><%= trendData.mathArr.slice().reverse()[i] %></td>
        <td><%= trendData.readingArr.slice().reverse()[i] %></td>
        <td><%= trendData.scienceArr.slice().reverse()[i] %></td>
      </tr>
    <% } %>
  </tbody>
</table>
</div>
</div>

<script>
  document.getElementById("defaultOpen").click();

    const trendData = <%- JSON.stringify(trendData) %>
    const mistakeData = <%- JSON.stringify(mistakeData) %>
    const summedQTypes = <%- JSON.stringify(summedQTypes) %>
    const tagsData = <%- JSON.stringify(tagsData) %>
</script>

<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/drilldown.js"></script>


<script src="/javascripts/myDataGraphs.js"></script>

<% } else { %>
<p>Add attempt first to analyze data.</p>
  <% } %> 

  </div>